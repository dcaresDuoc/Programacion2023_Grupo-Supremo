{
  // FOR TESTING JEST
  "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    // DEFAULT CONFIG
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // ADDED
    "outDir": "./dist",
    // FOR TESTING JEST
    "rootDir": "./src",
    "moduleResolution": "node",
    "checkJs": true,
    "noImplicitAny": true
  }
}
